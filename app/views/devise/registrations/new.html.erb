<div class="row row-grid">
  <div class="span8">
    <div class="box">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'} ) do |f| %>
        <fieldset>
          <legend><%= t('common.register') %></legend>
          <div class="row row-grid">
            <div class="span6 offset1">
              <%= print_messages resource %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :email, t(:email), :class => 'control-label'  %>
            <div class="controls">
              <%= f.email_field :email, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, t(:password), :class => 'control-label'  %>
            <div class="controls">
              <%= f.password_field :password, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password_confirmation, t(:password_confirmation), :class => 'control-label'  %>
            <div class="controls">
              <%= f.password_field :password_confirmation, :class => 'input-large' %>
            </div>
          </div>
          <div class="form-actions" >
            <%= f.submit t('common.register'), :class => 'btn btn-primary', :disable_with => t('common.waiting') %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>

  <div class="span4 sidebar-nav">
    <div class="box">
      <h2>其他选项</h2>
      <%= render :partial => "devise/links" %>
    </div>
  </div>
</div>
