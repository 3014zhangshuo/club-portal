<!DOCTYPE html>
<html>
<head>
  <%= render_page_title %>
  <meta charset='utf-8'>
  <%= stylesheet_link_tag 'default' %>
  <%= javascript_include_tag "default" %>
  <%= yield :skin_head %>
  <%= csrf_meta_tags %>
</head>

<%= render_body_tag %>
  <%= render 'common/top_bar' %>

  <%= render 'common/notice', :span => 'span10 offset1' %>

  <div class="container">
    <%= yield %>
