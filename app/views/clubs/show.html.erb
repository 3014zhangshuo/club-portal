<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <div class="box">
        <div class="pull-right">
          <div style="text-align:center;">
            <%= image_tag '/assets/no_logo.png', :size => '64x64' %>
          </div>
        </div>
        <h2><%= link_to @club.name, club_homepage_path(@club.permalink)  %></h2>
        <div class="info">
          <ul>
            <li>
              <span><%= t(:university) %></span>
              <strong><%= @club.university.name %></strong>
            </li>
            <li>
              <span><%= t('club.club_type') %></span>
              <strong><%= @club.club_type.name %></strong>
            </li>
          </ul>
        </div>
      </div>
      <div class="box">
        <div class="bio">
          <p><%= safe @club.intro %></p>
        </div>
      </div>
    </div>

    <div class="span4">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">
            其他选项
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>
