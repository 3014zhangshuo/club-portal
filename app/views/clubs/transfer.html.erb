<form action="<%= club_transfer_owner_path(params[:id]) %>" method="post" class="form-horizontal">
  <fieldset>
    <legend>建立社团</legend>
    <div class="control-group">
      <%= label_tag 'new_owner', '新拥有者', :class => 'control-label'  %>
      <div class="controls">
        <%= select_tag 'new_owner',
                         @members.collect{|t| [t.name, t.id]}%>
      </div>
    </div>
    <div class="form-actions" >
      <%= submit_tag "转让!", :class => 'btn btn-danger', :disable_with => t('common.waiting') %>
    </div>
  </fieldset>
</form>